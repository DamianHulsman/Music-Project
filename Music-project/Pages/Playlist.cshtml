@page
@using System.Data
@using Music_project.NewFolder
@using Music_project.code
@model Music_project.Pages.PlaylistModel
@{ 
    songMethods sm = new songMethods();
     List<Song> liedjes =   sm.GetAllSongs(Environment.CurrentDirectory + "/Data/playlist.xml");
   


}
    <link rel='stylesheet' href="~/lib/font-awesome/css/all.css">
<header><h1>Dit is de playlist pagina</h1></header>
<table id="playlisttable" class="table table-hover table-striped">
    <tr>
        <td></td>
        <td>
            <a asp-page="/addsong">Add song<i class="fa-solid fa-music"></i></a>
        </td>
    </tr>
    <tr>
        <td>
            id
        </td>
        <td>
            name artist/band
        </td>
        <td>
            title song
        </td>
        <td>
            year of release
        </td>
    </tr>   
    @foreach (Song s in liedjes)
    {
        <tr>
            <td>@s.id</td>
            <td>@s.artist</td>
            <td>@s.title</td>
            <td>@s.year</td>
            <td><a asp-page="/DeleteSong" asp-route-id="@s.id"><i class="fa-solid fa-trash-can"></i></a></td>
            <td><a asp-page="/EditSong" asp-route-id="@s.id" asp-route-artist="@s.artist" asp-route-title="@s.year"><i class="fa-solid fa-pen-to-square"></i></a></td>
        </tr>
    }
</table>