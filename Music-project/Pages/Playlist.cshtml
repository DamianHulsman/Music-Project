@page
@using System.Data
@using Music_project.NewFolder
@model Music_project.Pages.PlaylistModel
@{ 
    songMethods sm = new songMethods();
     DataSet ds =   sm.GetAllSongs(Environment.CurrentDirectory + "/Data/playlist.xml");
   


}
    <link rel='stylesheet' href="~/lib/font-awesome/css/all.css">
<header><h1>Dit is de playlist pagina</h1></header>
<table id="playlisttable" class="table table-hover table-striped">
    <tr>
        <td></td>
        <td>
            <a asp-page="/addsong">click here to add a song</a>
        </td>
    </tr>
    <tr>
        <td>
            id
        </td>
        <td>
            name artist/band
        </td>
        <td>
            title song
        </td>
        <td>
            year of release
        </td>
    </tr>   
    @foreach (DataRow dr in ds.Tables["song"].Rows)
    {
        <tr>
            <td>@dr["id"]</td>
            <td>@dr["artist"]</td>
            <td>@dr["title"]</td>
            <td>@dr["year"]</td>
            <td><a asp-page="/DeleteSong"><i class="fa-solid fa-trash-can"></i></a></td>
            <td><a asp-page="/EditSong"><i class="fa-solid fa-pen-to-square"></i></a></td>
        </tr>
    }
</table>